    <!-- masseges -->
    <div class="col-11 col-md-10 col-lg-8 mx-auto">

        <% if(status==0){ %>
        <div class="my-3 py-3 alert alert-danger alert-dismissible fade show" role="alert">
            <strong><%- mass %></strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% }else if(status==1){ %>
        <div class="my-3 py-3 alert alert-success alert-dismissible fade show" role="alert">
            <strong><%- mass %></strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% }else if(status==2){ %>
        <div class="my-3 py-3 alert alert-warning alert-dismissible fade show" role="alert">
            <strong><%- mass %></strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% } %>
    </div>

    <!-- masseges -->
    <div class="col-md-10 col-lg-8 mx-auto">
        <form action="/" method="POST" class='p-2 my-5 border'>
            <div class="border" style="text-align: center;margin: 7px;padding: 5px;">
                <img src="./public/imgs/avatar.jpeg" alt="Avatar" class="avatar"
                    style="width:200px;border-radius: 100px;">
            </div>
            <div class="form-group">
                <label for="uname">Email address</label>
                <input autocomplete="off" type="text" class="form-control" id="uname" name="email">
                <small id="emailHelp" class="form-text text-muted">*Required</small>
            </div>
            <div class="form-group">
                <label for="psw">Password</label>
                <input type="password" class="form-control" id="psw" name="password">
            </div>
            <button type="submit" class="btn btn-primary" onclick="Submit(event)">Submit</button>
            <button type="reset" class="btn btn-primary">Reset</button>
            <div class=" col-10 p-2 mx-auto" style="background-color:#f1f1f1">
                <p class="psw">Forgot <a href="#">password?</a></p>
            </div>
        </form>
    </div>


    <%- include("partials/Footer"); -%>
